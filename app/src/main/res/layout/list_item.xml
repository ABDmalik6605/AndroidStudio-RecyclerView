<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/itemborder"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/cyan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/numbering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="100"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemborder"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/daredevil"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/numbering"
        app:layout_constraintTop_toBottomOf="@id/itemborder"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/itemTitle1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Kamehameha"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:paddingLeft="40dp"
        app:layout_constraintStart_toEndOf="@id/itemIcon"
        app:layout_constraintTop_toBottomOf="@id/itemborder"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/itemTitle2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Kamehameha"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:background="@color/light_gray"
        android:textColor="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemTitle1"
        app:layout_constraintTop_toBottomOf="@id/itemborder" />
</androidx.constraintlayout.widget.ConstraintLayout>